<mvc:View
    controllerName="grafmodellezo.app.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">

	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
                    <Button text="PressMe" press="onPress" />
                    <Button text="Read" press="onPressRead" />
					<List items="{Twitter>/Tweets}">
                        <items>                            
                            <StandardListItem title="{Twitter>text}"/>
                        </items>
                    </List>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
